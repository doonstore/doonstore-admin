{
    "functions": {
        "predeploy": [
            "npm --prefix \"$RESOURCE_DIR\" run lint",
            "npm --prefix \"$RESOURCE_DIR\" run build"
        ]
    },
    "hosting": {
        "public": "public",
        "ignore": [
            "firebase.json"
        ],
        "rewrites": [{
            "source": "/**",
            "function": "index"
        }]
    }
}
